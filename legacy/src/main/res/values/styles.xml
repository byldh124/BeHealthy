<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Theme region start-->

    <!-- ActivityTheme white status bar-->
    <style name="AppTheme.WhiteHeader" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white01</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- ActivityTheme default status bar-->
    <style name="AppTheme.BlueHeader" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blue03</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- 다이얼로그 -->
    <style name="DialogTheme">
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--Theme Region End-->


    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/bg_toolbar</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/nanum_square_round_eb</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultText</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="IcExit" parent="Icon">
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="IcBack" parent="Icon">
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="TextBottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/cafe24_surround</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonBlue01" parent="Button">
        <item name="android:background">@drawable/bg_round_button_blue01</item>
        <item name="android:textColor">@color/defaultText_white</item>
    </style>

    <style name="CancelButton" parent="Button">
        <item name="android:textColor">@color/white01</item>
        <item name="android:background">@drawable/bg_square_button_gray01</item>
    </style>

    <style name="ConfirmButton" parent="Button">
        <item name="android:textColor">@color/white01</item>
        <item name="android:background">@drawable/bg_square_button_blue01</item>
    </style>

    <style name="DefaultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>