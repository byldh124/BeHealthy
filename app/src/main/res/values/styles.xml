<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.WhiteHeader" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white_01</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.BlueHeader" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blue_03</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/bg_toolbar</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/nanum_square_round_eb</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultText</item>
    </style>

    <style name="TextBottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/defaultText_white</item>
        <item name="android:fontFamily">@font/cafe24_surround</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonBlue01" parent="Button">
        <item name="android:background">@drawable/bg_button_blue01</item>
    </style>

</resources>